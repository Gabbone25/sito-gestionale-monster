window.onscroll = function() {
    var navbar = document.getElementById('navbar');
  
    if (window.scrollY > 50) { // Cambia 50 con l'altezza in pixel dal top desiderata per cambiare colore
      navbar.style.position = 'fixed';
      navbar.style.height ='13vh' // Cambia il colore quando si scrolla
    } else {
        navbar.style.position = 'fixed';
        navbar.style.height ='15vh' // Colore predefinito della navbar
    }
  };
  